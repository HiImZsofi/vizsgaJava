<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="hu.petrik.konyvtarasztali.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Button fx:id="deleteButton" alignment="TOP_LEFT" nodeOrientation="LEFT_TO_RIGHT" onAction="#deleteClick" text="Törlés" VBox.vgrow="ALWAYS" />
    <TableView fx:id="booksTable" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="titleCol" prefWidth="200.0" text="Cím" />
            <TableColumn fx:id="authorCol" prefWidth="200.0" text="Szerző" />
            <TableColumn fx:id="publish_yearCol" prefWidth="75.0" text="Kiadás éve" />
            <TableColumn fx:id="page_countCol" prefWidth="75.0" text="Oldalszám" />
        </columns>
    </TableView>
</VBox>
